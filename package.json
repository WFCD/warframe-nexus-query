{
  "name": "warframe-nexus-query",
  "version": "1.6.5",
  "description": "Query prices form nexus-stats.com and warframe.market.",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "test": "c8 mocha",
    "coverage": "npm test && c8 report --reporter=text-lcov | coveralls",
    "build:docs": "jsdoc -c jsdoc-config.json -d docs",
    "lint": "eslint index.js lib/ test/",
    "lint:fix": "eslint index.js lib/ test/ --fix",
    "postinstall": "install-peerdeps @wfcd/eslint-config@^1.5.0 -S"
  },
  "files": [
    "lib",
    "index.js"
  ],
  "directories": {
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/WFCD/warframe-nexus-query.git"
  },
  "keywords": [
    "warframe",
    "trading",
    "warframe-nexus",
    "warframe-trading"
  ],
  "author": "tobitenno",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/WFCD/warframe-nexus-query/issues"
  },
  "homepage": "https://github.com/WFCD/warframe-nexus-query#README",
  "dependencies": {
    "get-image-colors": "^4.0.1",
    "image-downloader": "^4.0.2",
    "json-fetch-cache": "^1.2.6",
    "json-query": "^2.2.2",
    "node-md-config": "^2.0.1",
    "numeral": "^2.0.6"
  },
  "devDependencies": {
    "@types/json-query": "^2.2.0",
    "@wfcd/eslint-config": "^1.5.0",
    "c8": "^9.1.0",
    "chai": "^5.0.3",
    "coveralls": "^3.1.1",
    "install-peerdeps": "^3.0.3",
    "mocha": "^10.2.0"
  },
  "engines": {
    "node": ">=18",
    "npm": ">=8.19"
  },
  "release": {
    "branch": "master"
  },
  "prettier": "@wfcd/eslint-config/prettier",
  "eslintIgnore": [
    ".github/**",
    "docs/**",
    "resources/**",
    "types/**"
  ],
  "eslintConfig": {
    "extends": "@wfcd/eslint-config/esm",
    "rules": {
      "no-underscore-dangle": [
        "error",
        {
          "allow": [
            "__basedir"
          ]
        }
      ]
    }
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ],
    "plugins": [
      "@babel/plugin-proposal-class-properties",
      "@babel/plugin-proposal-private-methods"
    ]
  },
  "mocha": {
    "spec": "test/test.js",
    "timeout": 30000,
    "bail": true,
    "exit": true,
    "slow": 10000
  },
  "c8": {
    "reporter": [
      "lcov",
      "text"
    ],
    "skip-full": true,
    "exclude": [
      "test/*",
      "lib/nexus/*"
    ]
  }
}
